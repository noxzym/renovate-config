{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "group:allNonMajor",
        "helpers:pinGitHubActionDigests",
        ":semanticCommits"
    ],
    "labels": [
        "dependencies"
    ],
    "schedule": [
        "before 6am"
    ],
    "timezone": "Asia/Jakarta",
    "ignorePaths": [
        ".devcontainer/**"
    ],
    "npm": {
        "packageRules": [{
                "matchUpdateTypes": [
                    "minor",
                    "patch"
                ],
                "matchCurrentVersion": "!/^0/",
                "automerge": true
            },
            {
                "matchDepTypes": [
                    "engines"
                ],
                "enabled": false
            },
            {
                "matchPackagePatterns": [
                    "@clytage/eslint-config",
                    "@typescript-eslint",
                    "eslint",
                    "typescript"
                ],
                "groupName": "ESLint Dependencies"
            },
            {
                "matchPackagePatterns": [
                    "@clytage"
                ],
                "groupName": "Clytage Dependencies"
            }
        ],
        "rangeStrategy": "bump"
    },
    "separateMultipleMajor": true,
    "separateMajorMinor": true
}
